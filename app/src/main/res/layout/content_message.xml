<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sploit.messageterror20.MessageActivity"
    tools:showIn="@layout/activity_message">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phoneNumber_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/phoneNumber_hint"
                android:inputType="phone" />

            <Button
                android:id="@+id/contact_Button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="연락처" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/message_editText"
                android:layout_width="255dp"
                android:layout_height="252dp"
                android:ems="10"
                android:hint="@string/message_hint"
                android:inputType="none" />

            <EditText
                android:id="@+id/messageByte_editText"
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="0.52"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0/140" />
        </LinearLayout>

        <EditText
            android:id="@+id/sendNumber_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/sendNumber_hit"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- <Button
                android:id="@+id/send_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보내기" /> -->

            <Button
                android:id="@+id/cancle_Button"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:text="전송취소" />

            <ProgressBar
                android:id="@+id/send_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="235dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/count_editText"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.64"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="0/0" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
